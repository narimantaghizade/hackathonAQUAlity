<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_layout_design"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/username"
        android:background="@drawable/edittext_shape"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:maxLines="1"
        android:drawableLeft="@drawable/username_asset"
        android:hint=" İstifadəçi adı"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/password"
        android:layout_below="@+id/username"
        android:background="@drawable/edittext_shape"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:maxLines="1"
        android:drawableLeft="@drawable/password_asset"
        android:hint=" Şifrə"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/login_in"
        android:layout_below="@+id/password"
        android:background="@drawable/button_shape"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Giriş"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textAllCaps="false"/>
    <LinearLayout
        android:layout_below="@+id/login_in"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp"
            android:text="Hesabınız yoxdur"/>
        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/endLoginButtonColor"
            android:textSize="17sp"
            android:text="@string/underline"
            android:clickable="true"/>
    </LinearLayout>

</RelativeLayout>